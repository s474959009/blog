---
layout: nil
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0">
    <channel>
        <title>{{ site.meta.site_title }}/blog/</title>
        <link>{{ site.meta.absolute_baseurl }}/blog/</link>
        <description>{{ site.meta.site_subtitle }}/blog/</description>
        <managingEditor>{{ site.meta.author.email }} ({{ site.meta.author.full_name }}/blog/)</managingEditor>
        <lastBuildDate>{{ site.time | date: "%a, %d %b %Y %H:%M:%S %z" }}/blog/</lastBuildDate>
        <language>{{ site.meta.site_language }}/blog/</language>
        {% for post in site.posts limit:15 %}

        <item>
            <title>{{ post.title }}/blog/</title>
            <pubDate>{{ post.date | date: "%a, %d %b %Y %H:%M:%S %z" }}/blog/</pubDate>
            <description>{{ post.content | xml_escape }}/blog/</description>
            <link>{{ site.meta.absolute_baseurl }}{{ post.url }}/blog/</link>
            <guid>{{ site.meta.absolute_baseurl }}{{ post.url }}/blog/</guid>
        </item>

        {% endfor %}
    </channel>
</rss>
